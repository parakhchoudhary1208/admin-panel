<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Create New Account</title>
</head>
<body>
    <div class="container">
        <div class="mycard">
            <div class="row">
                <div class="col-md-6">
                    <div class="myLeftCtn">
                        <form action="/register" method="post" class="text-center myForm">
                            <header>Register New Account</header>
                            <div class="form-group">
                                <i class="fas fa-user"></i>
                                <input name="fullname" type="text" class="myInput" placeholder="Full Name" id="name">
                            </div>

                            <div class="form-group">
                                <i class="fas fa-user"></i>
                                <input name="username" type="text" class="myInput" placeholder="Username" id="username">
                            </div>

                            <div class="form-group">
                                <i class="fas fa-envelope"></i>
                                <input name="email" type="email" class="myInput" placeholder="Email" id="email">
                            </div>

                            <div class="form-group">
                                <i style="cursor: pointer;" id="togglePassword" class="fas fa-eye"></i>
                                <input name="password" type="password" class="myInput" placeholder="Password" id="password">
                            </div>
                            <input type="submit" class="butt" value="CREATE ACCOUNT">
                         </form>
                         <a href="/">Already have an Account?</a>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="myRightCtn">
                        <div class="box">
                            <header>Welcome To FooDies</header>
                            <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Temporibus obcaecati, pariatur dicta, autem molestias inventore qui aut libero, architecto ut debitis praesentium unde officia voluptatem voluptates?</p>
                            <input type="button" class="butt_out" value="Learn More"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        const togglePassword = document.querySelector('#togglePassword');
const password = document.querySelector('#password');

  togglePassword.addEventListener('click', function (e) {
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);

    this.classList.toggle('fa-eye-slash');
});

document.querySelector("#username").addEventListener("input", function(){
        var that = this;
        if(this.value.trim().length > 0){
          axios.get(`/check/${this.value}`)
          .then(function(response){
            if(response.data.user){
              that.style.border = "2px solid red";
            }
            else{
              that.style.border = "2px solid green";
            }
          })
        }
        else{
          that.style.border = "initial";
        }
      })

      var created = document.querySelector(".butt");
       
          
       created.addEventListener("click", function(){
           var text = document.querySelector("#name").value;
           alert(text +" is Entering");
       })

    </script>
</body>
</html>